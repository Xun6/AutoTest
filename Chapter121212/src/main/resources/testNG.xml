<?xml version="1.0" encoding="UTF-8" ?>


<!--        用以执行所有testng的测试套件。-->

<suite name="这是用户管理系统测试套件">

    <test name="这是用户管理系统测试用例">
        <classes>
            <class name="com.xiaoyu.cases.LoginTest">
                <methods>
                    <include name="loginTrue"/>
                    <include name="loginFalse"/>
                </methods>
            </class>

            <class name="com.xiaoyu.cases.AddUserTest">
                <methods>
                    <include name="addUser"/>
                </methods>
            </class>
            <class name="com.xiaoyu.cases.GetUserInfoTest">
                <methods>
                    <include name="getUserInfo"/>
                </methods>
            </class>
            <class name="com.xiaoyu.cases.UpdateUserInforTest">
                <methods>
                    <include name="updateUserInfo"/>
                    <include name="deleteUser"/>
                </methods>
            </class>

            <class name="com.xiaoyu.cases.GetUserInfoListTest">
                <methods>
                    <include name="getUserListInfo"/>
                </methods>
            </class>
        </classes>
    </test>

<!--    自己加的监听器-->
    <listeners>
        <listener class-name="com.xiaoyu.Config.ExtentTestNGIReporterListener" />
    </listeners>

</suite>