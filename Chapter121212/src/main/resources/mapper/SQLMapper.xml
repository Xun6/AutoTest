<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--存储所有case的sql语句-->

<!-- 命名空间mapper,如果有多个mapper文件，这个必须唯一 -->
<mapper namespace="com.xiaoyu.modul">

    <!--获取登陆接口case,匹配我的 modul 中的类-->
    <select id="loginCase1" parameterType="Integer"  resultType="com.xiaoyu.modul.LoginCase">
        select * from loginCase where id = #{id};
    </select>


    <!--添加用户接口case，匹配我的 modul 中的类-->
    <select id="addUserCase1" parameterType="Integer" resultType="com.xiaoyu.modul.AddUserCase">
        select * from addUserCase where id=#{id};
    </select>


    <!--获取用户信息case，匹配我的 modul 中的类-->
    <select id="getUserInfoCase1" parameterType="Integer" resultType="com.xiaoyu.modul.GetUserInfoCase">
        <!-- SQL语句 -->
        select * from getUserInfoCase where id=#{id};
    </select>


    <!--获取用户列表case，匹配我的 modul 中的类-->
    <select id="getUserListCase1" parameterType="Integer" resultType="com.xiaoyu.modul.GetUserListCase">
        <!-- SQL语句 -->
        select * from getUserListCase where id=#{id};
    </select>


    <!--更新/删除用户信息case，匹配我的 modul 中的类-->
    <select id="updateUserInfoCase1" parameterType="Integer" resultType="com.xiaoyu.modul.UpdateUserInfoCase">
        select * from updateUserInfoCase where id = #{id};
    </select>

    
    <!--添加用户接口-->
    <select id="addUser" parameterType="com.xiaoyu.modul.AddUserCase" resultType="com.xiaoyu.modul.UserCase">
        select * from userCase where
        userName=#{userName}
        and password=#{password}
        and sex=#{sex}
        and age=#{age}
        and permission=#{permission}
        and isDelete=#{isDelete};
    </select>


    <!--获取用户信息-->
    <select id="getUserInfo" parameterType="com.xiaoyu.modul.GetUserInfoCase" resultType="com.xiaoyu.modul.UserCase">
        <!-- SQL语句 -->
        select * from userCase where id=#{userId};
    </select>


    <!--获取用户列表-->
    <select id="getUserList" parameterType="com.xiaoyu.modul.GetUserListCase" resultType="com.xiaoyu.modul.UserCase">
        <!-- SQL语句 -->
        select * from userCase
        <trim prefix="WHERE" prefixOverrides="and">   <!--预处理一个 and-->
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>
            <if test="null != sex and '' !=sex">
                AND sex=#{sex}
            </if>
            <if test="null != age and '' !=age">
                AND age=#{age}
            </if>
        </trim>
        ;
    </select>


    <!--获取更新后的数据-->
    <select id="getUpdateUserInfo" parameterType="com.xiaoyu.modul.UpdateUserInfoCase" resultType="com.xiaoyu.modul.UserCase">
        select * from userCase
        <trim prefix="WHERE" prefixOverrides="and">    <!--预处理一个 and-->
            <if test="null != userName and '' !=userName">
                AND userName=#{userName}
            </if>
            <if test="null != sex and '' !=sex">
                AND sex=#{sex}
            </if>
            <if test="null != age and '' !=age">
                AND age=#{age}
            </if>
            <if test="null != permission and '' !=permission">
                AND permission=#{permission}
            </if>
            <if test="null != isDelete and '' !=isDelete">
                AND isDelete=#{isDelete}
            </if>
        </trim>
        And id = #{userId};  <!--用id来处理更新数据-->
    </select>

</mapper>