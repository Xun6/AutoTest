<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!--我要执行的sql语句-->
<mapper namespace="com.xiaoyu">
<!--    获取 User 表内的用户数-->
    <select id="getUserCount2" resultType="Integer">
        select count(*) from user;
    </select>

<!--    添加用户到 User 表-->
    <insert id="addUser2" parameterType="com.xiaoyu.module.User">
        insert into user(id,name,age,sex) values(#{id},#{name},#{age},#{sex})
    </insert>


<!--    编辑更新用户-->
    <update id="updateUserData2" parameterType="com.xiaoyu.module.User">
        update user set name=#{name},age=#{age} where id=#{id}
    </update>


<!--    删除用户-->
    <delete id="delUserData2" parameterType="Integer">
        delete from user where id=#{id}
    </delete>
</mapper>